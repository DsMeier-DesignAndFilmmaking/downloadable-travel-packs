{
  "cleanUrls": false,
  "rewrites": [
    { "source": "/api/manifest/:slug", "destination": "/api/manifest?slug=:slug" },
    { "source": "/manifests/city-:slug.json", "destination": "/api/manifest?slug=:slug" },
    { "source": "/guide/:slug*", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/api/manifest/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}